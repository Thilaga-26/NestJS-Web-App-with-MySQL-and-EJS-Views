<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Homepage</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <style>
    footer {
    background-color: #34495e; 
    color: #fff;
    padding: 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 50px;
  }
  footer .left-content {
    text-align: left;
  }
  footer .right-content {
    text-align: right;
  }
  footer .social-icons a {
    color: #fff; 
    margin-right: 10px;
    text-decoration: none;
    font-size: 20px;
  }
  table {
    background-color:  #f2f2f2;  
    border-collapse: collapse;
    width: 100%;
  }
  th, td {
    padding: 8px;
    text-align: left;
    border-bottom: 1px solid #fff;
  }
  #addStudentBtn {
    margin-bottom: 15px; 
  }
  #addStudentContainer {
    margin-bottom: 15px; 
  }
  </style>
</head>
<body>

  <!-- Header -->
  <header style="display: flex; align-items: center; justify-content: flex-start; padding: 20px; background-color: #f2f2f2;">
    <img src="https://i.pinimg.com/originals/37/86/00/3786001447986993c2cd5bbfe77c9645.png" alt="Student Management Logo" style="width: 50px; height: auto; margin-right: 20px;">
    <h1 style="color: purple; margin: 0; font-size: 38px;">Student Management System</h1>
  </header>


   <!-- Main Content -->
  <main>
  <h2>All Students:</h2>
  <!-- <h3><p><b><a style="color:green"  href="/students/add">Add Student</a></b></p></h3> -->
  
  <!-- Add Student button -->
  <button style="color:green" id="addStudentBtn">Add Student</button>

  <!-- Modal Overlay -->
<div id="modalOverlay" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); z-index: 999; overflow: auto;">
  <!-- Content for adding a student -->
  <div id="addStudentContent" style="background-color: #fefefe; margin: 15% auto; padding: 20px; border: 1px solid #888; width: 50%;">
    <h1 style="color:red">Add Student</h1>
    <table>
      <tbody>
        <form method="POST" action="/students">
          <tr>
            <td><label for="name">Name:</label></td>
            <td><input type="text" id="name" name="name" required></td>
          </tr>
          <tr>
            <td><label for="dept">Dept:</label></td>
            <td><input type="dept" id="dept" name="dept" required></td>
          </tr>
          <tr>
            <td><label for="dob">Date of Birth:</label></td>
            <td><input type="date" id="dob" name="dob" required></td>
          </tr>
          <tr>
            <td><label for="gender">Gender:</label></td>
            <td>
              <select id="gender" name="gender" required>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
              </select>
            </td>
          </tr>
          <tr>
            <td><label for="address">Address:</label></td>
            <td><input type="text" id="address" name="address" required></td>
          </tr>
          <tr>
            <td><label for="city">City:</label></td>
            <td><input type="text" id="city" name="city" required></td>
          </tr>
          <tr>
            <td><label for="contactNo">Contact Number:</label></td>
            <td><input type="text" id="contactNo" name="contactNo" required></td>
          </tr>
          <tr>
            <td><label for="email">Email:</label></td>
            <td><input type="email" id="email" name="email" required></td>
          </tr>
          <tr>
            <td colspan="2"><button style="background-color:peachpuff;" type="submit">Add Student</button></td>
          </tr>
        </form>
      </tbody>
    </table>
    <h3><p><b><a style="color:green"  href="/students">Back to Homepage</a></b></p></h3>
  </div>
</div>

  <!-- Container for Add Student page content 
  <div id="addStudentContainer"></div>-->

  <table width="1050px" height="260">
      <tr bgcolor="skyblue">
        <th>ID</th>
        <th>Name</th>
        <th>Dept</th>
        <th>D.O.B</th>
        <th>Gender</th>
        <th>Address</th>
        <th>City</th>
        <th>Contact No</th>
        <th>Email</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    <tbody>
      <% students.forEach(student => { %>
        <tr>
          <td><%= student.id %></td>
          <td><%= student.name %></td>
          <td><%= student.dept %></td>
          <td><%= student.dob %></td>
          <td><%= student.gender %></td>
          <td><%= student.address %></td>
          <td><%= student.city %></td>
          <td><%= student.contactNo %></td>
          <td><%= student.email %></td>
          <td>
            <!-- Edit button -->
            <a  style="color:blue"  href="/students/edit/<%= student.id %>">Edit</a>
          </td>
          <td>
            <!-- Delete button -->
            <form method="POST" action="/students/delete/<%= student.id %>" onsubmit="return confirm('Are you sure you want to delete this student?');">
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  </main>

  <!-- Footer -->
  <footer>
    <div class="left-content">
      <p>&copy; 2024 Student Management System. All rights reserved.</p>
      <p>About Us | Terms of Service | Privacy Policy</p>
    </div>
    <div class="right-content">
      <div class="social-icons">
        <a href="https://www.facebook.com"><i class="fab fa-facebook-f"></i></a>
        <a href="https://twitter.com"><i class="fab fa-twitter"></i></a>
        <a href="https://www.instagram.com"><i class="fab fa-instagram"></i></a>
      </div>
      <p>Developed by: PSG Group of Institutions</p>
      <p>Contact: psginstitute4563@yahoo.com</p>
      <p>Address: No.2, West, Coimbatore, Tamilnadu, India</p>
    </div>
  </footer>

  <script>
    // Function to show the modal overlay
    function showAddStudentModal() {
        document.getElementById('modalOverlay').style.display = 'block';
    }
    
    // Function to hide the modal overlay
    function hideAddStudentModal() {
        document.getElementById('modalOverlay').style.display = 'none';
    }
    
    // Event listener for the "Add Student" button
    document.getElementById('addStudentBtn').addEventListener('click', function() {
        showAddStudentModal();
    });
    </script>
    
</body>
</html>
